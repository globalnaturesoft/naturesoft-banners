<% title "Setting: Banner" %>

<div class="panel panel-flat">
  <div class="panel-body">
    <%= form_for([naturesoft, :backend, Naturesoft::Option.new], html: {}) do |f| %>
      
      <h4 class="text-semibold">Listing</h4>
      <div class="row">
        <div class="col-sm-3 col-md-3">
          <div class="form-group">
            <label class="control-label" ><%= t(:items_per_page) %> <span class='text-danger'>*</span></label>
            <div class="">
              <%= text_field_tag "options[banners][items_per_page]", @options["banners"]["items_per_page"], class: "form-control number_input" %>
            </div>
          </div>          
        </div>
      </div>
    
      <div class="text-right">
        <%= button_tag "#{t(:save)}<i class=\"icon-check position-right\"></i>".html_safe, class: "btn btn-primary"%>
        <%= link_to "#{t(:cancel)}<i class=\"icon-cross3 position-right\"></i>".html_safe, naturesoft_banners.backend_banners_path, class: "btn btn-danger"%>
      </div>
        
    <% end %>
  </div>
</div>