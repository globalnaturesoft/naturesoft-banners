<% title t(:banners) %>

<div class="page_actions">
    <%= link_to "#{t(:new_banner)} <i class=\"icon-plus22 position-right\"></i>".html_safe, naturesoft_banners.new_admin_banner_path, class: 'btn btn-primary' %>
</div>
<br />

<form class="listing-form sortable" sort-url="<%= naturesoft.admin_custom_sort_path(class: "Naturesoft::Banners::Banner") %>">
    
    <div class="panel panel-flat">
        <div class="panel-body filter-box">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label><%= t(:sort_by) %></label>
                        <%= select_tag(:sort_by, options_for_select(Naturesoft::Banners::Banner.sort_by, :selected => params[:sort_by]), class: "select2", "sort-cond": "naturesoft_banners_banners.custom_order") %>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label><%= t(:sort_orders) %></label>
                        <%= select_tag(:sort_orders, options_for_select(Naturesoft::Banners::Banner.sort_orders, :selected => params[:sort_orders]), class: "select2", "sort-cond": "asc") %>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group has-feedback">
                        <label><%= t(:search) %></label>
                        <input type="text" name="keyword" class="form-control" placeholder="<%= t(:enter_search) %>" value="<%= params[:keyword] %>">
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
			
	<div class="btn-group list_actions mb-10 hide">
        <button type="button" class="btn btn-xs btn-info dropdown-toggle" data-toggle="dropdown">
            Actions <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">											
            <li>
                <a href="" data-href="<%= naturesoft_banners.delete_admin_banners_path %>" data-confirm="Are you sure!" data-method="DELETE">
                    <i class="icon-enter"></i> Delete
                </a>
            </li>            
        </ul>
    </div>
                
    <!-- Basic datatable -->
    <div class="panel panel-flat">
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr class="bg-teal-800">
						<th width="1%" class="check_all_list">
                            <input type="checkbox" class="styled">
                        </th>
                        <th><%= t(:image) %></th>
                        <th><%= t(:name) %></th>
                        <th><%= t(:link_url) %></th>
						<th class="text-center"><%= t(:creator) %></th>
                        <th><%= t(:created_at) %></th>
						<th><%= t(:status) %></th>
                        <th class="text-center"><%= t(:actions) %></th>
                    </tr>
                </thead>
                <tbody>
                    <% @banners.each do |item| %>
                        <tr<% if item.status == "active" %> class="success"<% else %> class="warning"<% end %>>
							<td width="1%" class="text-nowrap">
                                <input type="checkbox" class="node styled"
                                    name="ids[]"
                                    value="<%= item.id %>"
                                />
								<input type="hidden"
                                    name="custom_order"
                                    value="<%= item.custom_order %>"
                                />
                            </td>
                            <td>
                              <%= image_tag image_src(item.image_url.system), class: "img-rounded img-preview" %>
                            </td>
                            <td class="kq_search">
								<%= item.name %>
							</td>
                            <td><%= link_to(truncate(strip_tags(item.link_url), length: 30), item.link_url, target: "_blank", class: "no-tab") %></td>
							<td class="text-center">
                                <%= user_box(item.user) %>
							</td>
                            <td><%= item.created_at.strftime("%d/%m/%Y") %></td>
							<td><%= display_status(item.status) %></td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <%= link_to '<i class="icon-pencil"></i>'.html_safe, naturesoft_banners.edit_admin_banner_path(item), class: "btn bg-teal btn-icon btn-xs", title: item.name %>
			                    	<button type="button" class="btn bg-teal dropdown-toggle btn-xs" data-toggle="dropdown"><span class="caret"></span></button>
			                    	<ul class="dropdown-menu dropdown-menu-right">
										<% if item.status == "active" %>
                                        <li>
                                            <%= link_to '<i class="icon-lock4"></i> '.html_safe + t(:inactive), naturesoft_banners.disable_admin_banners_path(id: item.id), method: :put %>
                                        </li>
										<% end %>
										<% if item.status == "inactive" %>
                                        <li>
                                            <%= link_to '<i class="icon-unlocked"></i> '.html_safe + t(:active), naturesoft_banners.enable_admin_banners_path(id: item.id), method: :put %>
                                        </li>
                                        <% end %>
                                        <li>
                                            <%= link_to '<i class="icon-cross2"></i> '.html_safe + t(:delete), naturesoft_banners.admin_banner_path(item), method: :delete, data: {confirm: 'Are you sure?'} %>
                                        </li>
									</ul>
								</div>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="dataTables_wrapper no-footer">
                <div class="datatable-footer showed">
                    <div class="dataTables_info" ><%= page_entries_info @banners %></div>
                    <div class="dataTables_paginate paging_simple_numbers">
                        <%= will_paginate @banners, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- /basic datatable -->