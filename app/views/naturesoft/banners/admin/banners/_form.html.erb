<%= form_for([naturesoft_banners, :admin, banner], html: {class: "form-horizontal validate", multipart: true}) do |f| %>
    
    <div class="form-group">
      <label class="col-md-2 control-label" ><%= t(:image) %> <span class='text-danger'>*</span></label>
      <div class="media no-margin-top col-md-10">
        <div class="media-left">
          <%= image_tag(image_src(banner.image_url.system), class: "",  "preview-for": "banner[image_url]") %>
        </div>
  
        <div class="media-body">
          <input type="file" name="banner[image_url]" class="file-styled previewable">
          <span class="help-block">Accepted formats: gif, png, jpg.</span>
        </div>
      </div>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:name) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <%= f.text_field :name, class: "form-control required" %>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:scale) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <div class="input-group">
                <% selected = options_for_select([[banner.category.name, banner.category_id]],banner.category_id) if banner.category.present? %>
                <%= select_tag("banner[category_id]",
                    selected,
                    {
                        class: "select2-ajax",
                        include_blank: "none",
                        "data-url": select2_admin_categories_path,
                    }
                ) %>
                <span class="input-group-btn">
                    <a class="btn btn-info" href="<%= naturesoft_banners.new_admin_category_path %>"><i class="icon-plus2"></i></a>
                </span>
            </div>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:link_url) %> </label>
        <div class="col-md-10">
            <%= f.text_field :link_url, class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:description) %> <!--<span class='text-danger'>*</span>--></label>
        <div class="col-md-10">
            <%= f.text_area :description, rows: "5", cols: "5", class: "form-control" %>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag "#{t(:save)} <i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
    </div>
    
<% end %>