<%= form_for([naturesoft_banners, :admin, banner], html: {class: "form-horizontal validate", multipart: true}) do |f| %>
    
    <div class="form-group">
      <label class="col-md-2 control-label" ><%= t(:image) %> <span class='text-danger'>*</span></label>
      <div class="media no-margin-top col-md-10">
        <div class="media-left">
          <img src="<%= image_src(banner.image_url) %>" style="width: 60px; height: 60px; border-radius: 2px;" alt="">
        </div>
  
        <div class="media-body">
          <input type="file" name="banner[image_url]" class="file-styled">
          <span class="help-block">Accepted formats: gif, png, jpg.</span>
        </div>
      </div>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:name) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <%= f.text_field :name, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:link_url) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <%= f.text_field :link_url, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:description) %> <!--<span class='text-danger'>*</span>--></label>
        <div class="col-md-10">
            <%= f.text_area :description, rows: "5", cols: "5", class: "form-control" %>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag "#{t(:save)} <i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
    </div>
    
<% end %>